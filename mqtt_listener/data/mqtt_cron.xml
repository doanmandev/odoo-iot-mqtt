<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- MQTT Service: Check status -->
        <record id="ir_cron_mqtt_status_check" model="ir.cron">
            <field name="name">MQTT Service: Check status</field>
            <field name="model_id" ref="model_mqtt_service"/>
            <field name="state">code</field>
            <field name="code">model.check_mqtt_status()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- MQTT Service: Auto restart service -->
        <record id="ir_cron_mqtt_auto_restart" model="ir.cron">
            <field name="name">MQTT Service: Auto restart service</field>
            <field name="model_id" ref="model_mqtt_service"/>
            <field name="state">code</field>
            <field name="code">
service = model.search([], limit=1)
if service and service.status != 'start':
    model.start_mqtt_service()
            </field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>