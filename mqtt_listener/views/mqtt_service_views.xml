<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mqtt_service_tree" model="ir.ui.view">
        <field name="name">mqtt.service.tree</field>
        <field name="model">mqtt.service</field>
        <field name="arch" type="xml">
            <tree string="Service">
                <field name="name" />
                <field name="last_start" />
                <field name="status" />
                <field name="connection_status" />
            </tree>
        </field>
    </record>

    <record id="view_mqtt_service_form" model="ir.ui.view">
        <field name="name">mqtt.service.form</field>
        <field name="model">mqtt.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <header>
                    <button name="start_mqtt_service" string="Start service" type="object" class="oe_highlight"
                            invisible="status == 'start'" />
                    <button name="stop_mqtt_service" string="Stop service" type="object"
                            invisible="status == 'stop'" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="last_start" />
                        <field name="status" />
                        <field name="connection_status" />
                        <field name="thread_identifier" />
                        <field name="host_info" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mqtt_service" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">mqtt.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_mqtt_service" 
              name="Service"
              parent="mqtt_integration.menu_mqtt_configuration"
              action="action_mqtt_service"
              sequence="40"/>
</odoo>