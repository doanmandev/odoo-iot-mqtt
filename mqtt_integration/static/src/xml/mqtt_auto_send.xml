<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mqtt_integration.AutoSendMQTT">
        <div class="o_auto_send_mqtt">
            <div class="alert alert-info">
                <p><i class="fa fa-info-circle mr-2"></i> Automatically sending MQTT signal every 1 second.</p>
                <p class="mb-0">You can stop this process by clicking the button below or close this page.</p>
            </div>
            <div class="text-center mb16">
                <button class="btn btn-danger js_stop_auto_send">
                    <i class="fa fa-stop mr8"/>Stop auto-send
                </button>
            </div>
             <div class="o_auto_send_status mt-3 p-3 border rounded">
                <h5 class="mb-3"><i class="fa fa-chart-line mr-2"></i>Status:</h5>
                <div class="js_status_container">
                    <div class="row mb-2">
                        <div class="col-5 font-weight-bold">Sent:</div>
                        <div class="col-7"><span class="js_sent_count">0</span> Times</div>
                    </div>
                    <div class="row">
                        <div class="col-5 font-weight-bold">Last sent:</div>
                        <div class="col-7"><span class="js_last_sent font-italic">Not yet</span></div>
                    </div>
                </div>
            </div>

        </div>
    </t>
</templates>