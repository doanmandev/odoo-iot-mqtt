<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="view_mqtt_user_property_tree" model="ir.ui.view">
        <field name="name">mqtt.user.property.tree</field>
        <field name="model">mqtt.user.property</field>
        <field name="arch" type="xml">
            <tree string="User Properties">
                <field name="key"/>
                <field name="value"/>
                <field name="topic_id"/>
                <field name="history_id"/>
                <field name="content_type" optional="hide"/>
                <field name="format_payload" optional="hide"/>
                <field name="expiry" optional="hide"/>
                <field name="response_topic" optional="hide"/>
                <field name="correlation_data" optional="hide"/>
                <field name="subscription_identifier" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_mqtt_user_property_form" model="ir.ui.view">
        <field name="name">mqtt.user.property.form</field>
        <field name="model">mqtt.user.property</field>
        <field name="arch" type="xml">
            <form string="User Properties">
                <sheet>
                    <group>
                        <group>
                            <field name="key"/>
                            <field name="value"/>
                            <field name="topic_id"
                                   options="{
                                   'no_create': True,
                                   'no_create_edit': True,
                                   }"/>
                            <field name="history_id"
                                   options="{
                                   'no_create': True,
                                   'no_create_edit': True,
                                   }"/>
                            <field name="content_type"/>
                            <field name="format_payload"/>
                            <field name="expiry"/>
                        </group>
                        <group>
                            <field name="response_topic"/>
                            <field name="correlation_data"/>
                            <field name="subscription_identifier"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_mqtt_metadata" model="ir.actions.act_window">
        <field name="name">Metadata</field>
        <field name="res_model">mqtt.user.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Metadata (User Properties).
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mqtt_metadata"
              name="Metadata (User Properties)"
              parent="mqtt_integration.menu_mqtt_message_history"
              action="action_mqtt_metadata"
              sequence="3"/>

</odoo>
