<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="view_mqtt_broker_tree" model="ir.ui.view">
        <field name="name">mqtt.broker.tree</field>
        <field name="model">mqtt.broker</field>
        <field name="arch" type="xml">
            <tree string="MQTT Brokers">
                <field name="name"/>
                <field name="username"/>
                <field name="client_id"/>
                <field name="host"/>
                <field name="port"/>
                <field name="keepalive"/>
                <field name="connection_status"/>
            </tree>
        </field>
    </record>

    <record id="view_mqtt_broker_form" model="ir.ui.view">
        <field name="name">mqtt.broker.form</field>
        <field name="model">mqtt.broker</field>
        <field name="arch" type="xml">
            <form string="MQTT Broker">
                <header>
                    <field name="connection_status" widget="statusbar" statusbar_visible="unknown,success,fail"/>
                    <button name="action_check_connection"
                            type="object" string="Connect"
                            attrs="{'invisible': [('connection_status', '=', 'success')]}"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="url_scheme"/>
                            <field name="host"/>
                            <field name="port"/>
                        </group>
                        <group>
                            <field name="client_id"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="keepalive"/>
                        </group>
                        <group>
                            <field name="connect_timeout"/>
                            <field name="connection_status"/>
                            <field name="connection_message"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_mqtt_broker" model="ir.actions.act_window">
        <field name="name">MQTT Brokers</field>
        <field name="res_model">mqtt.broker</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a Broker
              </p>
            </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mqtt_root"
              name="MQTT Brokers"
              sequence="10"/>

    <menuitem id="menu_mqtt_configuration"
              name="Configuration"
              parent="mqtt_integration.menu_mqtt_root"
              sequence="100"/>

    <menuitem id="menu_mqtt_broker"
              name="Broker"
              parent="mqtt_integration.menu_mqtt_configuration"
              action="action_mqtt_broker"
              sequence="1"/>

</odoo>
