<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="view_mqtt_signal_tree" model="ir.ui.view">
        <field name="name">mqtt.signal.tree</field>
        <field name="model">mqtt.signal</field>
        <field name="arch" type="xml">
            <tree string="Signal" delete="false">
                <field name="subscription_id"/>
                <field name="payload"/>
                <field name="qos"/>
                <field name="retain"/>
            </tree>
        </field>
    </record>

    <record id="view_mqtt_signal_form" model="ir.ui.view">
        <field name="name">mqtt.signal.form</field>
        <field name="model">mqtt.signal</field>
        <field name="arch" type="xml">
            <form string="Signal" delete="false">
                <header>
                    <button name="action_send_mqtt" type="object" string="Sent" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="display_name" readonly="1"/>
                        <field name="broker_id"/>
                        <field name="subscription_id" domain="[('broker_id', '=', broker_id)]"/>
                        <field name="payload"/>
                        <field name="qos" optional="hide"/>
                        <field name="retain" optional="hide"/>
                    </group>
                    <separator string="Send/receive history (by topic)"/>
                    <field name="history_ids" nolabel="1" readonly="1" options="{'no_open': True, 'no_create': True, 'no_delete': True}">
                        <tree string="MQTT Signal history" create="false" edit="false" delete="false">
                            <field name="display_name"/>
                            <field name="signal_id"/>
                            <field name="payload"/>
                            <field name="direction"/>
                            <field name="qos" optional="hide"/>
                            <field name="retain" optional="hide"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="view_mqtt_signal_action" model="ir.actions.act_window">
        <field name="name">Signal</field>
        <field name="res_model">mqtt.signal</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new a Signal.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mqtt_signal"
              name="Signal"
              parent="mqtt_integration.menu_mqtt_root"
              action="view_mqtt_signal_action"
              sequence="3"/>

</odoo>