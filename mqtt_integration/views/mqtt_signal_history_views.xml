<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="view_mqtt_send_signal_history_tree" model="ir.ui.view">
        <field name="name">mqtt.send.signal.history.tree</field>
        <field name="model">mqtt.signal.history</field>
        <field name="arch" type="xml">
            <tree string="Send History" create="false" delete="false">
                <field name="timestamp"/>
                <field name="signal_id" readonly="1"/>
                <field name="topic" invisible="1"/>
                <field name="payload"/>
                <field name="direction" optional="hide"/>
                <field name="qos" optional="hide"/>
                <field name="retain" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_mqtt_received_signal_history_tree" model="ir.ui.view">
        <field name="name">mqtt.received.signal.history.tree</field>
        <field name="model">mqtt.signal.history</field>
        <field name="arch" type="xml">
            <tree string="Received History" create="false" delete="false">
                <field name="timestamp"/>
                <field name="signal_id" readonly="1"/>
                <field name="topic" invisible="1"/>
                <field name="payload"/>
                <field name="direction" optional="hide"/>
                <field name="qos" optional="hide"/>
                <field name="retain" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_mqtt_send_signal" model="ir.actions.act_window">
        <field name="name">Send History</field>
        <field name="res_model">mqtt.signal.history</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_mqtt_send_signal_history_tree"/>
        <field name="domain">[('direction', '=', 'send')]</field>
    </record>

    <record id="action_mqtt_received_signal" model="ir.actions.act_window">
        <field name="name">Received History</field>
        <field name="res_model">mqtt.signal.history</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_mqtt_received_signal_history_tree"/>
        <field name="domain">[('direction', '=', 'receive')]</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mqtt_signal_history"
              name="Signal History"
              parent="mqtt_integration.menu_mqtt_root"
              sequence="4"/>

    <menuitem id="menu_mqtt_send_signal"
              name="Send History"
              parent="mqtt_integration.menu_mqtt_signal_history"
              action="action_mqtt_send_signal"
              sequence="1"/>

    <menuitem id="menu_mqtt_received_signal"
              name="Received History"
              parent="mqtt_integration.menu_mqtt_signal_history"
              action="action_mqtt_received_signal"
              sequence="2"/>

</odoo>
