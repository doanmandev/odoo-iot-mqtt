<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="view_mqtt_signal_history_tree" model="ir.ui.view">
        <field name="name">mqtt.signal.history.tree</field>
        <field name="model">mqtt.signal.history</field>
        <field name="arch" type="xml">
            <tree string="MQTT Signal History" delete="false">
                <field name="timestamp"/>
                <field name="signal_id" readonly="1"/>
                <field name="topic"/>
                <field name="direction"/>
                <field name="payload"/>
                <field name="qos" optional="hide"/>
                <field name="retain" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_mqtt_signal_history" model="ir.actions.act_window">
        <field name="name">MQTT Signal History</field>
        <field name="res_model">mqtt.signal.history</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_mqtt_signal_history_tree"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mqtt_signal_history"
              name="Signal History"
              parent="mqtt_integration.menu_mqtt_root"
              action="action_mqtt_signal_history"
              sequence="4"/>

</odoo>
