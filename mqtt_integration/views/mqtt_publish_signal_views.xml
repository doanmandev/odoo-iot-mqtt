<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="view_mqtt_publish_signal_tree" model="ir.ui.view">
        <field name="name">mqtt.publish.signal.tree</field>
        <field name="model">mqtt.publish.signal</field>
        <field name="arch" type="xml">
            <tree string="Signal">
                <field name="name"/>
                <field name="subscription_id"/>
                <field name="payload"/>
                <field name="qos"/>
                <field name="retain"/>
            </tree>
        </field>
    </record>

    <record id="view_mqtt_publish_signal_form" model="ir.ui.view">
        <field name="name">mqtt.publish.signal.form</field>
        <field name="model">mqtt.publish.signal</field>
        <field name="arch" type="xml">
            <form string="Signal">
                <header>
                    <button name="action_publish_message" type="object" string="Publish Message" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_check_incoming_history" type="object"
                            class="oe_stat_button"
                                icon="fa-file-text-o"
                                context="{'signal_id': id}">
                            <div class="o_stat_info text-center d-flex flex-column align-items-center justify-content-center">
                                <field name="incoming_message_count" class="o_stat_value"/>
                                <span class="o_stat_text" invisible="incoming_message_count &lt; 2">
                                    Incoming Messages
                                </span>
                                <span class="o_stat_text" invisible="incoming_message_count &gt; 1">
                                    Incoming Message
                                </span>
                            </div>
                        </button>
                        <button name="action_check_outgoing_history" type="object"
                            class="oe_stat_button"
                                icon="fa-file-text-o"
                                context="{'signal_id': id}">
                            <div class="o_stat_info text-center d-flex flex-column align-items-center justify-content-center">
                                <field name="outgoing_message_count" class="o_stat_value"/>
                                <span class="o_stat_text" invisible="outgoing_message_count &lt; 2">
                                    Outgoing Messages
                                </span>
                                <span class="o_stat_text" invisible="outgoing_message_count &gt; 1">
                                    Outgoing Message
                                </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="broker_id"
                               options="{
                               'no_open': True,
                               'no_create': True,
                               'no_create_edit': True,
                               'no_quick_create': True}"/>
                        <field name="subscription_id"
                               domain="[('broker_id', '=', broker_id)]"
                               options="{
                               'no_open': True,
                               'no_create': True,
                               'no_quick_create': True,
                               'no_create_edit': True}"/>
                        <field name="payload"/>
                        <field name="direction" readonly="1"/>
                        <field name="qos" optional="hide"/>
                        <field name="retain" optional="hide"/>
                        <field name="is_allow_user_property"/>
                    </group>
                    <notebook invisible="not is_allow_user_property">
                        <page string="User Properties">
                            <field name="user_property_ids">
                                <tree>
                                    <field name="key"/>
                                    <field name="value"/>
                                    <field name="content_type" optional="hide"/>
                                    <field name="payload_format" optional="hide"/>
                                    <field name="expiry" optional="hide"/>
                                    <field name="topic_alias" optional="hide"/>
                                    <field name="response_topic" optional="hide"/>
                                    <field name="correlation_data" optional="hide"/>
                                    <field name="subscription_id" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="view_mqtt_publish_signal_action" model="ir.actions.act_window">
        <field name="name">Publish Signal</field>
        <field name="res_model">mqtt.publish.signal</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new a Signal.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mqtt_publish_signal"
              name="Signal"
              parent="mqtt_integration.menu_mqtt_root"
              action="view_mqtt_publish_signal_action"
              sequence="3"/>

</odoo>